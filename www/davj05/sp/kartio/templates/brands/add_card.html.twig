{% extends "base.html.twig" %}

{% block title %}Vytvořit novou kartu
{% endblock %}

{% block body %}
	<div class="bg-white shadow-md rounded-lg p-6">
		<h1 class="text-3xl font-bold mb-4">Vytvořit novou kartu</h1>
		<div class="mb-6">

			{{ form_start(form) }}
			<div class="mb-4 lg:w-96">

				{% for field in form %}

					{% if field.vars.name != "_token" %}
						<label class="input input-bordered flex input-accent items-center gap-2 mb-2">
							{{ form_label(field) }}
							{{ form_widget(field) }}
							{{ form_errors(field) }}
						</label>
					{% endif %}
				{% endfor %}


			</div>
			<button type="submit" class="btn btn-primary">Vytvořit</button>
			{{ form_end(form) }}

		</div>
		<div class="flex justify-end">
			<a href="{{ path('app_brand', {'id': brand.id}) }}" class="btn btn-secondary">Zpět</a>
		</div>
	</div>
{% endblock %}
